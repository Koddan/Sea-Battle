    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>app.controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>

  <!-- BattleServlet servlet -->
