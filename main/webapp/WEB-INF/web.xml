  </servlet-mapping>

  <!-- ProfileServlet servlet -->
  <servlet>
    <servlet-name>ProfileServlet</servlet-name>
    <servlet-class>app.controller.ProfileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProfileServlet</servlet-name>
    <url-pattern>/ProfileServlet</url-pattern>
  </servlet-mapping>

  <!-- startUserBattleServlet servlet -->
  <servlet>
    <servlet-name>startUserBattleServlet</servlet-name>
